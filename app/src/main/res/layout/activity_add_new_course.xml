<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewCourse">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2C3646"
        android:id="@+id/toolbaruser"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:id="@+id/back"
            android:src="@drawable/ic_action_back"/>
        <TextView
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:text="Add Course"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:textSize="20dp"

            />
    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:layout_below="@+id/toolbaruser"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:padding="16dp"
           >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/zoologo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/course" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >

                    <custom_font.MyTextView
                        android:id="@+id/listcourse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="end"
                        android:text="Lists"
                        android:textColor="#2C3646"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="39dp"
                        android:layout_height="1.5dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="2dp"
                        android:background="#2C3646"

                        />

                </LinearLayout>
            </LinearLayout>


            <custom_font.MyEditText
                android:id="@+id/editCoursename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:background="#00000000"
                android:hint="Course code"
                android:inputType="text"
                android:textColorHint="#a9b0c3"
                android:textSize="13dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#a9b0c3"

                />


            <custom_font.MyEditText
                android:id="@+id/editCoursecode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="#00000000"
                android:hint="Course unit"
                android:inputType="text"
                android:textColorHint="#a9b0c3"
                android:textSize="13dp"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#a9b0c3" />

            <custom_font.MyEditText
                android:id="@+id/editCoursestatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="#00000000"
                android:hint="Course status"
                android:inputType="text"
                android:textColorHint="#a9b0c3"
                android:textSize="13dp"

                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#a9b0c3"

                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <custom_font.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:text="Department: "
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/department"
                    android:layout_width="299dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:entries="@array/teams"
                    android:paddingTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="378dp"
                android:layout_height="wrap_content"
                android:paddingTop="30dp">

                <custom_font.MyTextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="Level: "
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/level"
                    android:layout_width="292dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:entries="@array/teams"
                    android:paddingTop="5dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp">

                <ListView
                    android:scrollbarStyle="outsideInset"
                    android:id="@+id/listViewcourse"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp">

                </ListView>

            </LinearLayout>


            <Button
                android:id="@+id/addcourse"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="42dp"
                android:background="@drawable/round"
                android:gravity="center"
                android:padding="14dp"
                android:text="Add new Course"
                android:textColor="#CBD1DC"
                android:textStyle="bold" />


        </LinearLayout>






        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />


    </RelativeLayout>

</RelativeLayout>