<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewLecturer">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2C3646"
        android:id="@+id/toolbaruser"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:id="@+id/back"
            android:src="@drawable/ic_action_back"/>
        <TextView
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:text="Add New Lecturer"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:textSize="20dp"

            />
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_below="@+id/toolbaruser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="605dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:padding="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/zoologo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/course" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >

                    <custom_font.MyTextView
                        android:id="@+id/signin1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="end"
                        android:text="Lists"
                        android:textColor="#2C3646"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="39dp"
                        android:layout_height="1.5dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="2dp"
                        android:background="#2C3646"

                        />

                </LinearLayout>
            </LinearLayout>


            <custom_font.MyEditText
                android:id="@+id/lecturerUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:background="#00000000"
                android:hint="USERNAME"
                android:inputType="text"
                android:textColorHint="#a9b0c3"
                android:textSize="13dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#a9b0c3"

                />


            <custom_font.MyEditText
                android:id="@+id/lecturerMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="#00000000"
                android:hint="EMAIL ADDRESS"
                android:inputType="text"
                android:textColorHint="#a9b0c3"
                android:textSize="13dp"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#a9b0c3" />

            <custom_font.MyEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="#00000000"
                android:hint="password"
                android:inputType="text"
                android:id="@+id/lecturerPassword"
                android:textColorHint="#a9b0c3"
                android:textSize="13dp"

                />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Lecturer"
    android:visibility="gone"
    android:id="@+id/lecturer"
    />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#a9b0c3"

                />


            <custom_font.MyTextView
                android:id="@+id/submitlecturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_marginTop="42dp"
                android:background="@drawable/round"
                android:gravity="center"
                android:padding="14dp"
                android:text="Add new Lecturer"
                android:textColor="#CBD1DC"
                android:textStyle="bold" />


        </LinearLayout>


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone" />


    </RelativeLayout>
</RelativeLayout>