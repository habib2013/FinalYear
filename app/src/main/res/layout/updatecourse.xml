<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_below="@+id/toolbaruser"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:padding="16dp"
            >

            <EditText
                android:id="@+id/editTextHeroId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <custom_font.MyEditText
                android:id="@+id/editCoursename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:background="#00000000"
                android:hint="Course code"
                android:inputType="text"
                android:textColorHint="#a9b0c3"
                android:textSize="13dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#a9b0c3"

                />


            <custom_font.MyEditText
                android:id="@+id/editCoursecode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="#00000000"
                android:hint="Course unit"
                android:inputType="text"
                android:textColorHint="#a9b0c3"
                android:textSize="13dp"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#a9b0c3" />

            <custom_font.MyEditText
                android:id="@+id/editCoursestatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="#00000000"
                android:hint="Course status"
                android:inputType="text"
                android:textColorHint="#a9b0c3"
                android:textSize="13dp"

                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#a9b0c3"

                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <custom_font.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:text="Department: "
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/department"
                    android:layout_width="299dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:entries="@array/teams"
                    android:paddingTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="378dp"
                android:layout_height="wrap_content"
                android:paddingTop="30dp">

                <custom_font.MyTextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="Level: "
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/level"
                    android:layout_width="292dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:entries="@array/teams"
                    android:paddingTop="5dp" />
            </LinearLayout>



            <Button
                android:id="@+id/addcourse"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="42dp"
                android:background="@drawable/round"
                android:gravity="center"
                android:padding="14dp"
                android:text="Update Course"
                android:textColor="#CBD1DC"
                android:textStyle="bold" />


        </LinearLayout>






        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />


    </RelativeLayout>

</LinearLayout>