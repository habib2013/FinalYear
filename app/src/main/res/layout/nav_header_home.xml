<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorbg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical">




    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header1_height"
        android:background="@color/colorbg"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingBottom="@dimen/activity_hader_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/banar1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pens"
            android:layout_alignParentTop="true"



            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="REACHEL GILBERT"
            android:textColor="@color/colortext"
            android:textSize="@string/text_size"/>



    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="FEEDBACK"
        android:textColor="@color/colortext"
        android:textSize="@string/text_size"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="MESSAGES"
            android:textColor="@color/colortext"
            android:textSize="@string/text_size"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="2"
                android:padding="5dp"
                android:gravity="center"

                android:background="@drawable/side_nav_bar"
                android:textColor="@color/colortext"
                android:textSize="@string/text_size"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="FRIENDS"
        android:textColor="@color/colortext"
        android:textSize="@string/text_size"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="COMMUNITIES"
        android:textColor="@color/colortext"
        android:textSize="@string/text_size"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="PHOTOS"
        android:textColor="@color/colortext"
        android:textSize="@string/text_size"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="VIDEOS"
        android:textColor="@color/colortext"
        android:textSize="@string/text_size"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="MUSIC"
        android:textColor="@color/colortext"
        android:textSize="@string/text_size"/>



</LinearLayout>